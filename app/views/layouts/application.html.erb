<!DOCTYPE html>
<html>
  <head>
    <title>WeixinOauthApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-light bg-faded">
	  <%= link_to "微信设置后台", root_path, class: "navbar-brand" %>
	  <ul class="nav navbar-nav">
	    <li class="nav-item <%= 'active' if controller_name == 'home' %>">
	      <%= link_to "首页", root_path, class: "nav-link" %>
	    </li>
	    <li class="nav-item <%= 'active' if controller_name == 'links' %>">
	      <%= link_to "网站接口链接", links_path, class: "nav-link" %>
	    </li>
	    <li class="nav-item <%= 'active' if controller_name == 'qrcodes' %>">
	    	<%= link_to "公众号二维码", qrcodes_path, class: "nav-link" %>
	    </li>
	  </ul>
	</nav>
	<div class="container" style="margin-top: 20px;">
	<div class="row">
		<div class="col-md-10 offset-md-1">
			  <% if notice.present? %>
			  <div class="alert alert-warning alert-dismissible fade in" role="alert">
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    <span aria-hidden="true">&times;</span>
				  </button>
				  <%= notice %>
				</div>
			  <% end %>
    			<%= yield %>
				</div>
			</div>
		</div>
  </body>
</html>
