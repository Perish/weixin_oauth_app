<%= form_for(link) do |f| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>链接</label>
    <%= f.text_field :link , width: "50%", required: true %>
  </div>
  <div class="field">
    <label>链接类型</label>
    <%= f.radio_button :link_type, 0 %>生产
